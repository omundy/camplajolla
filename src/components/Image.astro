---
const { img, title, classList } = Astro.props
import * as GLOBALS from '../lib/globals.mjs'
const { src = GLOBALS.getProjectImagePath(img) } = Astro.props
---

{src && <img src={src} alt={title} class={classList} />}

<style lang="scss">
  img {
    width: 100%;
    height: auto;

    &.thumb {
      height: 90px;
    }
  }
  img a {
    text-decoration: none;
  }
</style>
